<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   android:id="@+id/h_rv_categories">



        <ImageView
            android:id="@+id/iv_categories"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:padding="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvCategory"
            android:src="@drawable/ic_baseline_check_box_outline_blank_24" />

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Category Name"
        android:textSize="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_categories" />


</androidx.constraintlayout.widget.ConstraintLayout>